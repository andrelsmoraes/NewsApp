<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsImageStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/news_placeholder</item>
        <item name="android:foreground">#0D000000</item>
    </style>

    <style name="ArticleDetailsTitleText">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ArticleDetailsDefaultText">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="ArticleDetailsTertiaryText" parent="HeadlineItemTertiaryText" />

    <style name="ArticleDetailsLinkText">
        <item name="android:textColor">#0000ff</item>
        <item name="android:foreground">?selectableItemBackground</item>
    </style>

    <style name="HeadlineItemTitleText" parent="ArticleDetailsTitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="HeadlineItemTertiaryText">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>